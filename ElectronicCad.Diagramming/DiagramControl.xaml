<UserControl 
    x:Class="ElectronicCad.Diagramming.DiagramControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
    xmlns:local="clr-namespace:ElectronicCad.Diagramming"
    xmlns:controls="clr-namespace:ElectronicCad.Diagramming.Controls"
    mc:Ignorable="d">
    <Grid>
        <local:Diagram 
            x:Name="Diagram" 
            DomainDiagram="{Binding Path=DomainDiagram, RelativeSource={RelativeSource AncestorType=UserControl}}"/>

        <controls:UpperToolbar
            x:Name="UpperToolbar"
            Grid.ZIndex="1"
            VerticalAlignment="Center"
            HorizontalAlignment="Right"
            Margin="0 0 30 0"
            DiagramModeChanged="HandleToolbarModeChanged"/>
    </Grid>
</UserControl>
