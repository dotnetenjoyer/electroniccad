<ResourceDictionary 
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:common="clr-namespace:ElectronicCad.Common">

    <Style TargetType="{x:Type common:Icon}">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type common:Icon}">
                    <Path 
                        Fill="{TemplateBinding Foreground}"
                        Stroke="Red"
                        Stretch="Uniform"
                        StrokeThickness="5"
                        Data="{Binding Path, RelativeSource={RelativeSource TemplatedParent}}"/>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>