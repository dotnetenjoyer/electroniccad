<ResourceDictionary 
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:components="clr-namespace:ElectronicCad.Desktop.UI.Components">

    <Style TargetType="{x:Type components:Icon}">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type components:Icon}">
                    <Path 
                        Fill="{TemplateBinding Foreground}"
                        Stroke="{TemplateBinding Background}"
                        Stretch="Uniform"
                        Data="{Binding Path, RelativeSource={RelativeSource TemplatedParent}}"/>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>