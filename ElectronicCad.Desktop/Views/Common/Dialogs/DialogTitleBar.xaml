<UserControl x:Class="ElectronicCad.Desktop.Views.Common.Dialogs.DialogTitleBar"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:ElectronicCad.Desktop.Views.Common.Dialogs"
             mc:Ignorable="d"
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid Background="{StaticResource ComponentBackgroundBrush}">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>

        <StackPanel Orientation="Horizontal" Grid.Column="0">
            <TextBlock Text="Title"/>
        </StackPanel>

        <StackPanel Grid.Column="1">
            <TextBlock Text="Close"/>
        </StackPanel>
    </Grid>
</UserControl>
