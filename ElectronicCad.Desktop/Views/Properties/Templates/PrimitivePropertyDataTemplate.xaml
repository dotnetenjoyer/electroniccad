<ResourceDictionary 
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:components="clr-namespace:ElectronicCad.Desktop.UI.Components;assembly=ElectronicCad.Desktop.UI">

    <DataTemplate x:Key="PrimitiveBooleanValueDataTemplate">
        <StackPanel>
            <TextBlock>BOOLEAN VALUE</TextBlock>
        </StackPanel>
    </DataTemplate>

    <DataTemplate x:Key="PrimitiveEnumValueDataTemplate">
        <StackPanel>
            <TextBlock>ENUM VALUE</TextBlock>
        </StackPanel>
    </DataTemplate>

    <DataTemplate x:Key="PrimitiveInputValueDataTemplate">
        <components:InputControl 
            Title="{Binding Name}"
            Value="{Binding Value}"
            StringFormat="{Binding Format}"/>
    </DataTemplate>

</ResourceDictionary>