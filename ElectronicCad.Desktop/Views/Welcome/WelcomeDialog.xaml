<common:BaseNavigatedPage 
    x:Class="ElectronicCad.Desktop.Views.WelcomeDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:common="clr-namespace:ElectronicCad.Desktop.Views.Common"
    xmlns:dialogs="clr-namespace:ElectronicCad.Desktop.Views.Common.Dialogs"
    xmlns:viewModels="clr-namespace:ElectronicCad.MVVM.ViewModels;assembly=ElectronicCad.MVVM"
    mc:Ignorable="d"
    d:DataContext="{d:DesignInstance viewModels:WelcomeViewModel}"
    Width="800" 
    Style="{StaticResource Dialog}">
    <StackPanel Orientation="Vertical">
        <dialogs:DialogTitleBar 
            Title="Welcome"
            CloseCommand="{Binding CloseCommand}"/>

        <DockPanel>
            <Grid DockPanel.Dock="Bottom" Background="{StaticResource ComponentBackgroundBrush}" Height="84">
                <Grid Margin="36, 0" VerticalAlignment="Center">
                    <!-- <CheckBox Content="Display at startup" IsChecked="{Binding ShowWelcomeDialogOnStartup}" -->
                    <!--           HorizontalAlignment="Left" VerticalAlignment="Center" /> -->

                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Center">
                        <Button
                            Content="New Blank Project"
                            Style="{StaticResource PrimaryButton}"
                            Margin="16, 0"
                            MinWidth="140"/>
                        
                        <Button
                            Content="Open Project"
                            Style="{StaticResource PrimaryButton}"
                            MinWidth="140"/>
                    </StackPanel>
                </Grid>
            </Grid>

            <Border Padding="10">
                <TextBlock Foreground="White">Welcome dialog</TextBlock>
            </Border>
        </DockPanel>
    </StackPanel>
</common:BaseNavigatedPage>
