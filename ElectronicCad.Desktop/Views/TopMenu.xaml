<UserControl 
    x:Class="ElectronicCad.Desktop.Views.TopMenu"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:viewModels="clr-namespace:ElectronicCad.MVVM.ViewModels;assembly=ElectronicCad.MVVM"
    d:DataContext="{d:DesignInstance Type=viewModels:TopMenuViewModel, IsDesignTimeCreatable=False}"
    mc:Ignorable="d">
    <Menu>
        <MenuItem Header="Файл">
            <MenuItem Header="Открыть проект"/>
            <MenuItem Header="Создать проект"/>
            <MenuItem Header="Сохранить проект" Command="{Binding SaveProjectCommand}"/>
        </MenuItem>
        <MenuItem Header="Представление">
            <MenuItem Header="Темы">
                <MenuItem Header="Белая тема"/>
                <MenuItem Header="Черная тема"/>
            </MenuItem>
        </MenuItem>
    </Menu>
</UserControl>
