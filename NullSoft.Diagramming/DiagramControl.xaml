<UserControl x:Class="NullSoft.Diagramming.DiagramControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:NullSoft.Diagramming"
             mc:Ignorable="d">
    <Grid>
        <!-- <StackPanel DockPanel.Dock="Top" Orientation="Horizontal" Background="RosyBrown"> -->
        <!--     ~1~ <Button Click="SetSelectionMode">Selection mode</Button> @1@ -->
        <!--     ~1~ <Button Click="SetNewLineMode">New line mode</Button> @1@ -->
        <!--     <Button>New line mode</Button> -->
        <!-- </StackPanel> -->

        <local:Ruler x:Name="Ruler" Background="{Binding RelativeSource={RelativeSource AncestorType=UserControl}, Path=Background}">
            <local:Diagram 
                Background="{Binding RelativeSource={RelativeSource AncestorType=local:DiagramControl}, Path=DiagramBackground}"
                Foreground="{Binding RelativeSource={RelativeSource AncestorType=UserControl}, Path=Foreground}"/>
        </local:Ruler>
    </Grid>
    
</UserControl>
